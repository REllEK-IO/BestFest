extends ./templates/review

block append config
	-var pageStyle= "";

block main
	div
		h2.text-center What's the vibe?

		form(id= "main-form")

			label Festival Name
				select
					option 
					option Beyond Wonderland
					option Coachella
					option CRSSD
					option Desert Hearts
					option Dirtybird Campout
					option FYF
					option Hard Summer
					option Kaaboo
					option Lightning in a Bottle
					option Outsidelands
					option Reggae on the River
					option Snowglobe
					option Stagecoach
					option Symbiosis
			br

			label What year(s) did you go?
				select
					option 
					option 2017
					option 2016
					option 2015
					option 2014
					option 2013
					option 2012
					option 2011
					option 2010
					option 2009
					option 2008
					option 2007
					option 2006
					option 2005
					option 2004
					option 2003
					option 2002
					option 2001
					option 2000
			br

			label Rate your experience (1-5)     
			input(id= "overall-rating" maxlength="1")
			br

			label Cost overall?
					input(type= "radio" name="radAnswer1")
					label Cheap
					input(type= "radio" name="radAnswer1")
					label Average
					input(type= "radio" name="radAnswer1")
					label Pricey
			br

			label How was security?
					input(type= "radio" name="radAnswer2")
					label Tight
					input(type= "radio" name="radAnswer2")
					label Average
					input(type= "radio" name="radAnswer2")
					label Lax
			br

			label How was the sound quality?
					input(type= "radio" name="radAnswer3")
					label Weak
					input(type= "radio" name="radAnswer3")
					label Average
					input(type= "radio" name="radAnswer3")
					label Bumpin'
			br

			label Tell us more about your experience:
			br
			textarea(id= "text-review")
			br

			button submit